    "test": "ts-node test/adjuster.test.ts"
  },
  "dependencies": {
    "express": "^4.19.2",
    "multer": "^2.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
