{
  "name": "retraction-adjuster",
  "version": "0.1.0",
  "description": "CLI to adjust G-code retraction and deretraction distances based on travel length",
  "license": "MIT",
  "bin": {
    "retraction-adjust": "dist/src/index.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dev": "ts-node src/index.ts",
    "dev:server": "ts-node src/server.ts",
